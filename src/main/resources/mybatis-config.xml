<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<typeAliases>
		<typeAlias type="org.me.domain.PaymentVO" alias="Payment" />
	</typeAliases>
	 

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:orcl" />
				<property name="username" value="new_ss7" />
				<property name="password" value="ss7" />			
			</dataSource>		
		</environment>	
	</environments>
	
	<mappers>
		<mapper resource="/org/me/mapper/Payment.xml" />		
		<mapper resource="/org/me/mapper/board.xml" />		
	</mappers>
</configuration>
